@model CIS174_TestCoreApp.Models.CreatePersonViewModel


<h2>Create Person</h2>
<form asp-action="Index" asp-controller="Assignment7">
    <div class="row form-group">
        <div class="col-md-4">
            <label asp-for="FirstName"></label>
            <input class="form-control" asp-for="FirstName" />
            <span asp-validation-for="FirstName"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="LastName"></label>
            <input class="form-control" asp-for="LastName" />
            <span asp-validation-for="LastName"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            <label asp-for="Age"></label>
            <input class="form-control" asp-for="Age" />
            <span asp-validation-for="Age"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="DateOfBirth"></label>
            <input class="form-control" asp-for="DateOfBirth" />
            <span asp-validation-for="DateOfBirth"></span>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="Country"></label>
            <select asp-for="Country" asp-items="Model.Countries"></select>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-4">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="col-md-4">
            <label asp-for="ConfirmPassword"></label>
            <input class="form-control" asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword"></span>
        </div>
    </div>

    <button class="btn btn-primary" type="submit">Create</button>
</form>

@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}
